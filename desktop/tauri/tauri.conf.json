{
  "package": {
    "productName": "Wikit Desktop",
    "version": "0.5.0"
  },
  "build": {
    "distDir": "../ui/dist",
    "devPath": "http://localhost:8080",
    "beforeDevCommand": "cd ui && trunk serve",
    "beforeBuildCommand": "cd ui && trunk build",
    "beforeBundleCommand": "cd ui && trunk build --release",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.zhqli.wikit",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "Wikit Desktop",
        "width": 1024,
        "height": 740,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "freezePrototype": true,
      "dangerousDisableAssetCspModification": true
    }
  }
}
